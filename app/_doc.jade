extends _layout
block content
  .container
    .row
      .col-md-10
        h1.page-header= title
          .pull-right
            a(href="#{link}", data-toggle='tooltip', data-placement='left', title='Improve this article').btn.btn-default.edit-btn
              i.fa.fa-pencil.fa-fw
        != doc
        ol.breadcrumb.doc-breadcrumb
          each crumb in breadcrumbs
            if crumb.active
              li.active= crumb.title
            else
              li
                a(href="#{crumb.link}")= crumb.title
      .col-md-2
        != sidebar
    .row
      .col-md-12
