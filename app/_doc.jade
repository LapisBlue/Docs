extends _layout
block content
  .container
    .row
      .col-md-3
        .form-group(style='width: 100%').docs-push
          input.form-control(type="text", placeholder="Search").search-form
          //-span.input-group-btn(style='width: 40px')
            button.btn.btn-default.search-trigger
              i.fa.fa-search.fa-fw
        != sidebar
      .col-md-9.main
        h1.page-header= title
          .pull-right
            a(href="#{link}", data-toggle='tooltip', data-placement='left', title='Improve this article').btn.btn-default.edit-btn
              i.fa.fa-pencil.fa-fw
        != doc
        ol.breadcrumb.doc-breadcrumb
          each crumb in breadcrumbs
            if crumb.active
              li.active= crumb.title
            else
              li
                a(href="#{crumb.link}")= crumb.title
        #disqus_thread
        script.
          /* * * CONFIGURATION VARIABLES: EDIT BEFORE PASTING INTO YOUR WEBPAGE * * */
          var disqus_shortname = 'lapisblue'; // required: replace example with your forum shortname
              /* * * DON'T EDIT BELOW THIS LINE * * */
          (function() {
              var dsq = document.createElement('script'); dsq.type = 'text/javascript'; dsq.async = true;
              dsq.src = '//' + disqus_shortname + '.disqus.com/embed.js';
              (document.getElementsByTagName('head')[0] || document.getElementsByTagName('body')[0]).appendChild(dsq);
          })();
        noscript
          | Please enable JavaScript to view the
          a(href='http://disqus.com/?ref_noscript') comments powered by Disqus.
        a(href='http://disqus.com').dsq-brlink comments powered by <span class="logo-disqus">Disqus</span></a>